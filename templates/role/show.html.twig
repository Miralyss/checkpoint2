{% extends 'base.html.twig' %}

{% block title %}Role{% endblock %}

{% block body %}
    <h1>Role</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Name</th>
                <td>{{ role.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ role.description }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('role_index') }}" class="btn btn-info mb-3">Retour</a>

    <a href="{{ path('role_edit', {'id': role.id}) }}" class="btn btn-info mb-3">Editer</a>

    {{ include('role/_delete_form.html.twig') }}
{% endblock %}
